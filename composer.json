{
    "name": "mrzen/tigerbay",
    "description": "Tigerbay PHP Client Library",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Mrzen\\Tigerbay\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Mrzen\\Tigerbay\\Tests\\": "tests/"
        }
    },

    "authors": [
        {
            "name": "Leo Adamek",
            "email": "leo.adamek@mrzen.com"
        }
    ],
    "require": {
        "php": ">=7.2.24",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7",
        "ext-json": "*",
        "symfony/serializer": "^5.3",
        "symfony/property-access": "^5.3",
        "doctrine/annotations": "^1.13",
        "phpdocumentor/reflection-docblock": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    }
}
